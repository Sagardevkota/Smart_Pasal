<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="220dp"


    >
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center"

            >


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >



            <ImageView
                android:id="@+id/ivImg"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="1dp"
                android:scaleType="fitXY"
                app:srcCompat="@color/colorAccent" />

                <TextView
                    android:id="@+id/tvIsStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="OUT OF \n STOCK"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/Black"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    />


            </RelativeLayout>

            <TextView
                android:id="@+id/tvProduct_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="start"
                android:textStyle="bold"
                android:text="Name"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"

                android:layout_marginBottom="5dp"
                android:numStars="4"
                />
            <TextView
                android:id="@+id/tvFixed_Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:text="Rs.1200"

                android:gravity="start"
                android:layout_marginBottom="5dp"
                android:textColor="#fc2312"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMarked_Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="1500"
                android:textAlignment="textStart"
                android:textColor="@android:color/background_dark"
                android:textSize="12sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-5%"
            android:background="@drawable/roundedstyle"
            android:textColor="@color/White"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:textSize="15sp"
            android:textStyle="bold"

            android:layout_alignParentEnd="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_shopping_cart"
            android:tint="@color/Black"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"

            />


    </RelativeLayout>


</androidx.cardview.widget.CardView>


